&lt;div style="padding:0px;margin:0px"&gt;&lt;strong style="padding:0px;margin:0px"&gt;&lt;span style="padding:0px;margin:0px"&gt;******************&lt;/span&gt;&lt;/strong&gt;&lt;/div&gt;
